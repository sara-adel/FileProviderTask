<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sara.fileprovidertask.MainActivity">

    <com.sara.fileprovidertask.RoundedImageView
        android:id="@+id/image"
        android:layout_width="@dimen/layout"
        android:layout_height="@dimen/layout"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sara"/>

    <ImageView
        android:id="@+id/custom_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/camera"/>

</RelativeLayout>
